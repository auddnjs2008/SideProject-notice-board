header.header
    .header__column
        a(href=routes.home)
            <i class="fas fa-chalkboard"></i>
    .header__column        
        form(action=routes.search,method="get")
            input(type="text",name="term", placeholder="Searcy by term...")
    .header__column
        ul
            if !loggedUser
                li.join
                    a(href=routes.join) Join
                li.user
                    a(href=routes.login) LogIn    
            else
                li
                    a(href=`/board/${routes.upload}`) Upload
                li    
                    a(href=routes.userDetail(loggedUser.id)) Profile
                li
                    a(href=routes.logout) Log Out    
            